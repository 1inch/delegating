{
    "name": "@1inch/delegating",
    "version": "0.0.1",
    "description": "Set of contracts for delegating incentives",
    "homepage": "https://github.com/1inch/delegating#readme",
    "author": "1inch",
    "files": [
        "/contracts/**/*.sol"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:1inch/delegating.git"
    },
    "license": "MIT",
    "dependencies": {
        "@1inch/farming": "https://github.com/1inch/farming",
        "@1inch/solidity-utils": "2.1.1",
        "@openzeppelin/contracts": "4.7.3"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "2.2.0",
        "@nomiclabs/hardhat-etherscan": "3.1.1",
        "@nomiclabs/hardhat-truffle5": "2.0.7",
        "@nomiclabs/hardhat-web3": "2.0.0",
        "chai": "4.3.6",
        "dotenv": "16.0.3",
        "eslint": "8.25.0",
        "eslint-config-standard": "17.0.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-n": "15.3.0",
        "eslint-plugin-promise": "6.1.0",
        "ethers": "5.7.1",
        "hardhat": "2.12.0",
        "hardhat-deploy": "0.11.18",
        "hardhat-gas-reporter": "1.0.9",
        "rimraf": "3.0.2",
        "solhint": "3.3.7",
        "solidity-coverage": "0.8.2"
    },
    "scripts": {
        "test": "hardhat test --show-stack-traces --parallel",
        "test:ci": "hardhat test --show-stack-traces",
        "clean": "rimraf artifacts cache coverage contracts/hardhat-dependency-compiler",
        "deploy": "hardhat deploy --network",
        "build": "rimraf ./dist && mkdir dist && cp package.json ./dist && cp README.md ./dist && cp -R ./contracts ./dist/contracts",
        "coverage": "hardhat coverage",
        "lint:js": "eslint .",
        "lint:js:fix": "eslint . --fix",
        "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
        "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
        "lint": "yarn run lint:js && yarn run lint:sol",
        "lint:fix": "yarn run lint:js:fix && yarn run lint:sol:fix"
    }
}
